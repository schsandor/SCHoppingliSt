<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCHoppingliSt.View.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:SCHoppingliSt.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             xmlns:model="clr-namespace:SCHoppingliSt.Model"
             xmlns:strings="clr-namespace:SCHoppingliSt.Resources"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry ReturnCommand="{Binding CreateStoreCommand}"
                   Placeholder="{x:Static strings:AppResources.CreateStorePlaceholder}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
